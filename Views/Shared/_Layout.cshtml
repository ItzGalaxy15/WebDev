<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Week12_C</title>
    <script src="/spa.bundle.js"></script>
</head>
<body>
    <div id="root">
        @RenderBody()
    </div>
    <script>
        // Ensure spa.main is called after the script is loaded
        if (typeof spa !== 'undefined' && typeof spa.main === 'function') {
            spa.main();
        } else {
            console.error('spa.main is not a function');
        }
    </script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>